@model GoalsCharacterSheet.Web.Models.RegisterExternalLoginModel
@section title {
Register Account
}
@section info {
You've successfully authenticated with <strong>@ViewBag.ProviderDisplayName</strong>.
Please enter a user name for this site below and click the Confirm button to finish
logging in.
}
<form action="/Account/ExternalLoginConfirmation?RerurnUrl=@ViewBag.ReturnUrl" method="post" class="row" >
@Html.AntiForgeryToken()
<fieldset>
    <legend>Register</legend>
    <div class="control-group span12">
        <div class="controls">
            <div class="input-prepend">
                <span class="add-on">User Name</span>
                <input name="UserName" class="span6" id="class-base" type="text" value="@Model.UserName" />
            </div>
        </div>
        <input type="submit" class="btn btn-primary" value="Register" />
    </div>
    @Html.HiddenFor(m => m.ExternalLoginData)
</fieldset>
</form>
